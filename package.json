{
  "name": "key-narrower",
  "packageManager": "yarn@3.2.1",
  "version": "0.2.0",
  "description": "Simple utilities for Typescript objects.",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint",
    "lint:all": "eslint --ext .ts src",
    "release": "release-it --npm.yarn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cravend/key-narrower.git"
  },
  "keywords": [
    "typescript",
    "object",
    "keys"
  ],
  "author": "cravend <https://github.com/cravend>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cravend/key-narrower/issues"
  },
  "homepage": "https://github.com/cravend/key-narrower/",
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "latest",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "release-it": "^15.0.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.7.3"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn lint --fix",
      "yarn test --passWithNoTests"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        }
      }
    }
  }
}
